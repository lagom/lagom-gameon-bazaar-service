{
  "apiVersion": "apps/v1beta1",
  "kind": "StatefulSet",
  "metadata": {
    "name": "bazzar"
  },
  "spec": {
    "serviceName": "bazzar",
    "replicas": 1,
    "template": {
      "metadata": {
        "labels": {
          "app": "bazzar"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "bazzar",
            "image": "registry.ng.bluemix.net/javaone/bazzar-impl:1.0-SNAPSHOT",
            "imagePullPolicy": "Always",
            "ports": [
              {
                "containerPort": 9000,
                "name": "http-lagom-api"
              },
              {
                "containerPort": 2551,
                "name": "akka-remote"
              }
            ],
            "env": [
              {
                "name": "CASSANDRA_SERVICE_NAME",
                "value": "_native._tcp.cassandra.default.svc.cluster.local"
              },
              {
                "name": "APPLICATION_SECRET",
                "value": "bazzar-application-secret"
              },
              {
                "name": "GAMEONSERVICE_BIND_PORT",
                "value": "9000"
              },
              {
                "name": "GAMEONSERVICE_BIND_IP",
                "value": "0.0.0.0"
              },
              {
                "name": "AKKA_ACTOR_SYSTEM_NAME",
                "value": "bazzar-v1"
              },
              {
                "name": "AKKA_REMOTING_BIND_PORT",
                "value": "2551"
              },
              {
                "name": "AKKA_REMOTING_BIND_HOST",
                "value": "$HOSTNAME.bazzar.default.svc.cluster.local"
              },
              {
                "name": "AKKA_SEED_NODES",
                "value": "bazzar-0.bazzar.default.svc.cluster.local:2551,bazzar-1.bazzar.default.svc.cluster.local:2551,gameon17s99-2.gameon17s99.default.svc.cluster.local:2551"
              },
              {
                "name": "POD_NAME",
                "valueFrom": {
                  "fieldRef": {
                    "fieldPath": "metadata.name"
                  }
                }
              },
              {
                "name": "POD_NAMESPACE",
                "valueFrom": {
                  "fieldRef": {
                    "fieldPath": "metadata.namespace"
                  }
                }
              }
            ],
            "readinessProbe": {
              "httpGet": {
                "path": "/_status/circuit-breaker/current",
                "port": 9000
              },
              "initialDelaySeconds": 5,
              "periodSeconds": 5
            }
          }
        ]
      }
    }
  }
}
